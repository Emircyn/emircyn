---
import {
    Card,
    CardHeader,
    CardTitle,
    CardDescription,
    CardContent,
} from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";

const experiences = [
    {
        company: "InspireIT Information Technologies Consultancy",
        role: "Frontend Developer",
        date: "Apr 2024 - Present",
        location: "Istanbul",
        description: "Developing modern web applications and user interfaces.",
        skills: ["Frontend Development", "React", "TypeScript"],
    },
    {
        company: "GuruDesk.com",
        role: "Frontend Developer",
        date: "Feb 2023 - Apr 2024",
        location: "Tallinn",
        description:
            "Worked on various frontend projects using Next.js and WordPress.",
        skills: ["WordPress", "Next.js", "Web Development"],
    },
    {
        company: "Bilgeweb",
        role: "Junior Web Developer",
        date: "Sep 2019 - Jun 2020",
        location: "Ankara",
        description: "Internship focused on web development fundamentals.",
        skills: ["HTML", "CSS", "JavaScript"],
    },
];
---

<section id="experience" class="container py-8 md:py-12 lg:py-24 bg-muted/50">
    <div
        class="mx-auto flex max-w-[58rem] flex-col items-center justify-center gap-4 text-center mb-8"
    >
        <h2 class="font-bold text-3xl leading-[1.1] sm:text-3xl md:text-6xl">
            Experience
        </h2>
        <p
            class="max-w-[85%] leading-normal text-muted-foreground sm:text-lg sm:leading-7"
        >
            My professional journey in web development.
        </p>
    </div>
    <div class="mx-auto max-w-3xl space-y-8">
        {
            experiences.map((exp) => (
                <div class="relative pl-8 border-l-2 border-muted">
                    <div class="absolute top-0 left-[-9px] w-4 h-4 rounded-full bg-primary" />
                    <Card className="mb-4">
                        <CardHeader>
                            <div class="flex justify-between items-start">
                                <div>
                                    <CardTitle>{exp.role}</CardTitle>
                                    <CardDescription className="text-base font-medium mt-1">
                                        {exp.company}
                                    </CardDescription>
                                </div>
                                <Badge variant="outline">{exp.date}</Badge>
                            </div>
                        </CardHeader>
                        <CardContent>
                            <p class="text-sm text-muted-foreground mb-4">
                                {exp.description}
                            </p>
                            <div class="flex flex-wrap gap-2">
                                {exp.skills.map((skill) => (
                                    <Badge
                                        variant="secondary"
                                        className="text-xs"
                                    >
                                        {skill}
                                    </Badge>
                                ))}
                            </div>
                        </CardContent>
                    </Card>
                </div>
            ))
        }
    </div>
</section>
