---
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Textarea } from "@/components/ui/textarea";
import {
    Card,
    CardHeader,
    CardTitle,
    CardDescription,
    CardContent,
} from "@/components/ui/card";
import { Mail, Linkedin, Github } from "lucide-react";
---

<section id="contact" class="container py-8 md:py-12 lg:py-24 bg-muted/50">
    <div
        class="mx-auto flex max-w-[58rem] flex-col items-center justify-center gap-4 text-center mb-8"
    >
        <h2 class="font-bold text-3xl leading-[1.1] sm:text-3xl md:text-6xl">
            Get in Touch
        </h2>
        <p
            class="max-w-[85%] leading-normal text-muted-foreground sm:text-lg sm:leading-7"
        >
            Have a question or want to work together? Feel free to reach out!
        </p>
    </div>
    <div class="mx-auto max-w-[600px]">
        <Card>
            <CardHeader>
                <CardTitle>Contact Me</CardTitle>
                <CardDescription>
                    Fill out the form below or email me directly at <a
                        href="mailto:contact@emircan.com"
                        class="text-primary hover:underline"
                        >contact@emircan.com</a
                    >
                </CardDescription>
            </CardHeader>
            <CardContent>
                <div class="flex justify-center gap-4">
                    <a
                        href="https://www.linkedin.com/in/emircyn/"
                        target="_blank"
                        rel="noreferrer"
                    >
                        <Button
                            variant="outline"
                            size="icon"
                            className="h-12 w-12"
                        >
                            <Linkedin className="h-6 w-6" />
                            <span class="sr-only">LinkedIn</span>
                        </Button>
                    </a>
                    <a
                        href="https://github.com/emircyn"
                        target="_blank"
                        rel="noreferrer"
                    >
                        <Button
                            variant="outline"
                            size="icon"
                            className="h-12 w-12"
                        >
                            <Github className="h-6 w-6" />
                            <span class="sr-only">GitHub</span>
                        </Button>
                    </a>
                    <a href="mailto:contact@emircan.com">
                        <Button
                            variant="outline"
                            size="icon"
                            className="h-12 w-12"
                        >
                            <Mail className="h-6 w-6" />
                            <span class="sr-only">Email</span>
                        </Button>
                    </a>
                </div>
            </CardContent>
        </Card>
    </div>
</section>
